{
    "compilerOptions": {
        "outDir": "./build/",
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": false,
        "target": "es5",
        "sourceMap": true,
        "lib": ["es5", "es2015", "dom", "scripthost"],
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
